<!DOCTYPE html>
<html>
  <head>
    <title>PatientsManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="upper-header">
        <div class="logo">
          <%= link_to image_tag('logo.png' , size: '185x50'), "/" %>
        </div>
        <div class="header-nav">
          <%= link_to "ログイン", root_path, class: "post" %>
          <%= link_to "新規登録", root_path, class: "post" %>
        </div>
      </div>
      <div class="lower-header">
        <%= link_to "入院患者", root_path, class: "list list-1" %>
        <%= link_to "退院調整", root_path, class: "list list-2" %>
        <%= link_to "転院調整", root_path, class: "list list-3" %>
        <%# <%= link_to "患者登録", new_patient_path, class: "list list-4" %> %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>