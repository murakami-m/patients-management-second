<!DOCTYPE html>
<html>
  <head>
    <title>PatientsManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="upper-header">
        <div class="logo">
          <%= link_to image_tag('logo.png' , size: '185x50'), "/" %>
        </div>
        <% if user_signed_in? %>
          <div class="header-nav">
            <%= link_to(current_user.name, user_path(current_user.id), { class: "header-name" }) %>
            <%= link_to("ログアウト", destroy_user_session_path, { method: :delete, class: "post"}) %>
          </div>
        <% else %>
          <div class="header-nav">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
      <div class="lower-header">
        <%= link_to "入院患者", root_path, class: "list list-1" %>
        <%= link_to "入院前患者", before_hospitalization_patients_path, class: "list list-2" %>
        <%= link_to "退院後患者", discharged_patients_patients_path, class: "list list-3" %>
        <%= link_to "患者登録", new_patient_path, class: "list list-4" %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>